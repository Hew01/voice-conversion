{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["ESNext"],
    "types": ["react-native", "jest"],
    "moduleResolution": "Node",
    "noEmit": true,
    "target": "ESNext",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "tests": ["tests/*"],
      "@components/*": ["src/components/*"],
      "selection": ["./selection.json"],
      "@views/*": ["src/views/*"],
      "@data/*": ["src/data/*"],
      "@assets/*": ["assets/*"],
    }
  },
  "exclude": ["node_modules", "babel.config.js", ".expo"]
}
